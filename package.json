{
  "name": "nxus-templater",
  "version": "3.0.0-0",
  "description": "The template manager for Nxus applications",
  "main": "lib",
  "scripts": {
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register -R spec",
    "compile": "babel src --out-dir lib",
    "prepublish": "npm run compile",
    "postpublish": "npm run docs-readme && npm run commit-update-docs",
    "docs-readme": "export NAME=`npm view . name`; export VERSION=`npm view . version`; documentation readme ./src/*.js --name $NAME --project-version $VERSION --readme-file ./README.md -s $NAME",
    "commit-update-docs": "git add ./README.md && git commit -m 'Updated README API Docs' && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nxus/template-manager.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nxus/template-manager/issues"
  },
  "homepage": "https://github.com/nxus/template-manager",
  "dependencies": {
    "bluebird": "^3.0.6",
    "glob": "^6.0.1",
    "node-uuid": "^1.4.7",
    "underscore": "^1.8.3"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "peerDependencies": {
    "nxus-core": "^3.0.0-0",
    "nxus-renderer": "^3.0.0-0"
  },
  "devDependencies": {
    "mocha": "^2.2.5",
    "should": "^7.0.2",
    "sinon": "^1.17.2",
    "chai": "^3.5.0",
    "documentation": "^4.0.0-beta",
    "chai-as-promised": "^5.2.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0"
  }
}
